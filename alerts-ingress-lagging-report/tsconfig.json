{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [
      "es2019",
    ],
    "sourceMap": true,
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./hello-world/dist",
    "baseUrl": "./"
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}